{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "required": ["groups"],
    "properties": {
      "id": { "type": "integer", "minimum": 1 },
      "rewardBonus": { "type": "number", "minimum": 0 },
      "boss": { "type": "boolean", "default": false },
      "groups": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["type", "count"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["villager","squire","knight","hero","engineer","kingsguard","boss"]
            },
            "count": { "type": "integer", "minimum": 1 },
            "interval_ms": { "type": "integer", "minimum": 0, "default": 0 },
            "delay_ms": { "type": "integer", "minimum": 0, "default": 0 }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
}
